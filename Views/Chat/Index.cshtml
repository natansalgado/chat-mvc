@model mvc.Models.UserModel
@{
    ViewBag.Title = "Chat";
    ViewBag.PlaceholderAvatar = "https://t4.ftcdn.net/jpg/05/42/36/11/360_F_542361185_VFRJWpR2FH5OiAEVveWO7oZnfSccZfD3.jpg";
}

<div id="chat-container">
    <div id="header">
        <h4 class="title">CHAT GERAL</h4>
        <div class="btn-group">

            <img id="header-avatar"
                src="@(!string.IsNullOrEmpty(Model.Avatar) ? Model.Avatar : ViewBag.PlaceholderAvatar)"
                data-bs-toggle="dropdown" aria-expanded="false">
            <ul class="dropdown-menu dropdown-menu-dark">
                <li>
                    <a asp-action="Edit" asp-controller="Chat" class="dropdown-item">Perfil</a>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <a asp-action="Logout" asp-controller="Chat" class="dropdown-item text-danger">Sair</a>
                </li>
            </ul>
        </div>
    </div>

    <div id="chat-messages">
        <div id="chatArea" class="chat-area"></div>
    </div>

    <form id="inputs">
        <input autofocus type="text" id="message-input" placeholder="Digite sua mensagem..." />
        <input type="hidden" id="userId" value="@Model.Id" />
        <button id="send-button">Enviar</button>
    </form>

    <button style="display: none;" id="new-messages" class="btn">Novas mensagens</button>
</div>